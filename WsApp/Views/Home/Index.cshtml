@{
    ViewData["Title"] = "Home Page";
}

<div class="container top-space">
    <div class="col-xs-6">
        Player 1:
        <table class="table table-bordered" style="background-color:#e6f9ff">
            <tbody>
                @for (int i = 0; i < 15; i++)
                {
                    <tr>
                        @for (int j = 0; j < 15; j++)
                        {
                            <td id="@i+@j" style="border:2px solid #999999"></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-xs-6">
        Player 2:
        <table class="table table-bordered">
            <tbody>
                @for (int i = 0; i < 15; i++)
                {
                    <tr id="@i">
                        @for (int j = 0; j < 15; j++)
                        {
                            <td style="border:2px solid #999999"></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <ul id="selections"></ul>
            <input class="form-control" id="selection-content" />
        </div>
    </div>
</div>


@section Scripts{
    <script data-main="scripts/main" src="https://rawgit.com/radu-matei/websocket-manager/master/src/WebSocketManager.Client.TS/dist/WebSocketManager.js"></script>
}