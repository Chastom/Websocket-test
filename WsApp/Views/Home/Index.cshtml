@{
    ViewData["Title"] = "Home Page";
}

<div class="container top-space">

    <div class="col-xs-6">
        My fleet:

        <table id="grid1" class="table table-bordered" style="background-color:#e6f9ff">
            <tbody>
                @for (int i = 0; i < 15; i++)
                {
                    <tr id="@i">
                        @for (int j = 0; j < 15; j++)
                        {
                            <td align="center"></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
        <button id="Bombardier" class="btn btn-primary" type="submit">8x1</button>
        <button id="Cruiser" class="btn btn-primary" type="submit">4x1</button>
        <button id="Submarin" class="btn btn-primary" type="submit">3x1</button>
        <button id="Kukuruznik" class="btn btn-primary" type="submit">2x1</button>
        <button id="Schnicel" class="btn btn-primary" type="submit">1x1</button>
        <hr>
    </div>

    <div class="col-xs-6">
        Enemy fleet:
        <table id="grid2" class="table table-bordered" style="background-color:lightgrey">
            <tbody>
                @for (int i = 0; i < 15; i++)
                {
                    <tr id="@i">
                        @for (int j = 0; j < 15; j++)
                        {
                            <td align="center"></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <div class="row">
        <div class="col-lg-12">
            <div class="col-xs-6">
                <ul id="selections"></ul>
            </div>
            <div class="col-xs-6">
                <ul id="attacks"></ul>
            </div>
            <input class="form-control" id="selection-content" />
        </div>
    </div>
</div>


@section Scripts{
    <script data-main="scripts/main" src="~/lib/signalr.js"></script>
}